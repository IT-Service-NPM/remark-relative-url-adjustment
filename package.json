{
	"name": "@it-service-npm/remark-relative-url-adjustment",
	"type": "module",
	"version": "0.1.0",
	"description": "The Remark plugin streamlines URL adjustments in Markdown files, ensuring links remain accurate even after file relocations or inclusions",
	"keywords": [
		"markdown",
		"heading",
		"depth",
		"mdast-plugin",
		"remark-plugin"
	],
	"author": {
		"name": "Sergei S. Betke",
		"email": "Sergey.S.Betke@yandex.ru",
		"url": "https://github.com/sergey-s-betke"
	},
	"homepage": "https://github.com/IT-Service-NPM/remark-relative-url-adjustment",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/IT-Service-NPM/remark-relative-url-adjustment.git"
	},
	"bugs": {
		"url": "https://github.com/IT-Service-NPM/remark-relative-url-adjustment/issues"
	},
	"license": "MIT",
	"engines": {
		"node": ">=22.17"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": "./dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc --build --clean && tsc --build",
		"CI": "npm run build && npm run lint && npm run test && npm run update-readme-API && npm run update-readme",
		"check-exports": "attw --pack .",
		"lint": "tsc && eslint",
		"test": "vitest run --coverage",
		"update-readme-API": "npx api-extractor run --local && npx api-documenter markdown -i ./temp -o ./docs",
		"update-examples-readme": "remark test/examples/*/readme.md --output",
		"update-main-readme": "remark .readme.md --output README.md",
		"update-readme": "npm run update-examples-readme && npm run update-main-readme",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
	},
	"dependencies": {
		"relateurl": "^0.2.7",
		"remark": "^15.0.1",
		"unist-util-visit": "^5.1.0"
	},
	"devDependencies": {
		"@altano/vitest-plugins": "^1.1.1",
		"@commitlint/cli": "^20.3.0",
		"@commitlint/config-angular": "^20.3.0",
		"@commitlint/config-conventional": "^20.3.0",
		"@commitlint/types": "^20.2.0",
		"@eslint/js": "^10.0.1",
		"@it-service-npm/remark-gfm-admonition": "^1.0.0",
		"@it-service-npm/remark-include": "^4.2.1",
		"@microsoft/api-documenter": "^7.26.0",
		"@microsoft/api-extractor": "^7.48.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/npm": "^13.1.2",
		"@semantic-release/release-notes-generator": "^14.0.1",
		"@szum-tech/semantic-release-config": "^2.3.5",
		"@types/mdast": "^4.0.4",
		"@types/node": "^25.2.3",
		"@types/relateurl": "^0.2.33",
		"@typescript-eslint/eslint-plugin": "^8.56.0",
		"@typescript-eslint/parser": "^8.56.0",
		"@vitest/coverage-istanbul": "^4.0.16",
		"@vitest/eslint-plugin": "^1.6.8",
		"conventional-changelog-cli": "^5.0.0",
		"eslint": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-n": "^17.24.0",
		"eslint-plugin-prettier": "^5.5.5",
		"eslint-plugin-sonarjs": "^4.0.0",
		"eslint-plugin-tsdoc": "^0.5.0",
		"eslint-plugin-unicorn": "^63.0.0",
		"mdast-util-directive": "^3.1.0",
		"remark-cli": "^12.0.1",
		"remark-code-import": "^1.2.0",
		"remark-gfm": "^4.0.0",
		"remark-license": "^6.1.0",
		"remark-lint-code-block-style": "^4.0.0",
		"remark-preset-lint-consistent": "^6.0.0",
		"remark-preset-lint-recommended": "^7.0.0",
		"remark-remove-comments": "^1.1.1",
		"remark-toc": "^9.0.0",
		"remark-typography": "^0.7.0",
		"remark-validate-links": "^13.0.2",
		"semantic-release": "^25.0.2",
		"to-vfile": "^8.0.0",
		"tsdoc-markdown": "^1.0.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.0",
		"unified": "^11.0.5",
		"vfile": "^6.0.3",
		"vite-plugin-vitest-typescript-assert": "^1.1.4",
		"vitest": "^4.0.18"
	}
}
