; Check http://editorconfig.org/ for more information
; Top-most EditorConfig file
root = true

[*]
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.{editorconfig,gitattributes,gitignore}]

[*.yml]
end_of_line = lf
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
end_of_line = lf

; fix linting error for generated files
[docs/**/*.md]
trim_trailing_whitespace = false

[{LICENSE,NOTICE}]
indent_style = space
indent_size = 2
end_of_line = lf

[*.{js,mjs,cjs,ts,tsx}]
end_of_line = lf
indent_style = space
indent_size = 2

[*.json]
end_of_line = lf
indent_style = tab
indent_size = 2
